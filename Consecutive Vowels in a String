def get_the_vowels(word):
    vowels = 'aeiou'
    vIndex = 0
    res = 0
    for i in range(len(word)):
        if word[i] == vowels[vIndex]:
            res += 1
            if vIndex == 4:
                vIndex = 0
            else:
                vIndex +=1
    return res
