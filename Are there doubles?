def double_check(strng):
    strng=strng.lower()
    for i in range(len(strng)-1):
        if  strng[i]==strng[i+1]:
            return True
    return False
    
// Another Solution

def double_check(strng):
    s = ''
    for letter in strng.lower():
        if letter == s:
            return True
        s = letter
    return False
