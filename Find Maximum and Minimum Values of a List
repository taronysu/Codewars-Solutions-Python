def minimum(arr):
    min_val = arr[0]
    for check in arr:
        if check < min_val:
            min_val = check 
    return min_val
def maximum(arr):
    max_val = arr[0] 
    for check in arr: 
        if check > max_val: 
            max_val = check 
    return max_val
    
