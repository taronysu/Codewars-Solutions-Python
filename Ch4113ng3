def nerdify(txt):
    res = ''
    for el in txt:
        if(el == 'a' or el == 'A'):
            res += '4'
        elif(el == 'e' or el == 'E'):
            res +='3'
        elif (el == 'l'):
            res += '1'
        else:
            res += el
    return res
