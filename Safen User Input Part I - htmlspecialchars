def html_special_chars(d):
    html = []
    for char in d:
        if char == '<':
            html.append('&lt;')
        elif char == '>':
            html.append('&gt;')
        elif char == '"':
            html.append('&quot;')
        elif char == '&':
            html.append('&amp;')
        else:
            html.append(char)
    return ''.join(html)
