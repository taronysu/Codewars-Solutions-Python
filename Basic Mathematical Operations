def basic_op(op, value1, value2):
    if op == '+':
        return value1 + value2
    elif op == '-':
        return value1 - value2
    elif op == '*':
        return value1 * value2
    elif op == '/':
        return value1 / value2 if value2 != 0 else None
    else:
        return 'no bueno'
