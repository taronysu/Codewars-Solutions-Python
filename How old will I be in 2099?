def calculate_age(birth, current):
    age = current - birth
    if age == 1:
        return "You are 1 year old."
    if age > 0:
        return f"You are {age} years old."
    if age == 0:
        return "You were born this very year!"
    if age == -1:
        return "You will be born in 1 year."
    if age < -1:
        return f"You will be born in {-age} years."
