def is_opposite(s1,s2):
    s = ''
    if len(s1) != len(s2) or len(s1)== 0 or len(s2) == 0:
        return False
    for i in range(len(s1)):
        if s1[i] == s1[i].upper():
            s += s1[i].lower()
        else:
            s += s1[i].upper()
    return s == s2
