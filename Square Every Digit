def square_digits(num):
    num =  str(num)
    sq = ""
    for el in num:
        square = int(el)**2
        sq = sq+str(square)
    return int(sq)
    
// Another Solution 

def square_digits(num):
    num = str(num)
    return int(''.join(str(int(el)**2) for el in num))
