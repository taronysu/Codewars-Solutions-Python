def i(word):
    c_v = 0
    vowel = 'aouieAOUIE'
    for el in word:
        if el in vowel:
            c_v += 1
    if c_v >= len(word)-c_v or word[0].islower() or word.startswith('I'):
        return 'Invalid word'
    else:
        return 'i' + word
